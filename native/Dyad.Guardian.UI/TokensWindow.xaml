<Window x:Class="Dyad.Guardian.UI.TokensWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Capability Tokens" Height="600" Width="900"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="White" Padding="20" Margin="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Capability Token Management" Style="{StaticResource HeaderText}" Margin="0"/>
                <Button Grid.Column="1" Content="+ Request Token" Style="{StaticResource ActionButton}" Click="RequestToken_Click"/>
            </Grid>
        </Border>
        
        <!-- Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Tokens List -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,20,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Active Capability Tokens" Style="{StaticResource SectionHeader}"/>
                    
                    <DataGrid Grid.Row="1" x:Name="TokensDataGrid" 
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              GridLinesVisibility="Horizontal"
                              BorderThickness="0"
                              HeadersVisibility="Column"
                              SelectionChanged="TokensDataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Token ID" Binding="{Binding TokenId, StringFormat={}{0:8}}" Width="100"/>
                            <DataGridTextColumn Header="Subject" Binding="{Binding Subject}" Width="120"/>
                            <DataGridTextColumn Header="Resource" Binding="{Binding Resource}" Width="150"/>
                            <DataGridTextColumn Header="Action" Binding="{Binding Action}" Width="80"/>
                            <DataGridTextColumn Header="Issued" Binding="{Binding IssuedAt, StringFormat={}{0:MM/dd HH:mm}}" Width="90"/>
                            <DataGridTextColumn Header="Expires" Binding="{Binding ExpiresAt, StringFormat={}{0:MM/dd HH:mm}}" Width="90"/>
                            <DataGridCheckBoxColumn Header="Revoked" Binding="{Binding Revoked}" Width="70"/>
                            <DataGridTemplateColumn Header="Actions" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="Validate" Style="{StaticResource ActionButton}" Margin="0,0,8,0" Padding="8,4" FontSize="11" Click="ValidateToken_Click"/>
                                            <Button Content="Revoke" Style="{StaticResource DangerButton}" Padding="8,4" FontSize="11" Click="RevokeToken_Click"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
            
            <!-- Create Token Form -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="TokenFormPanel">
                        <TextBlock Text="Request New Token" Style="{StaticResource SectionHeader}"/>
                        
                        <TextBlock Text="Subject" Style="{StaticResource FormLabel}"/>
                        <TextBox x:Name="SubjectTextBox" Style="{StaticResource FormTextBox}" Text="user-session" Margin="0,0,0,12"/>
                        
                        <TextBlock Text="Resource" Style="{StaticResource FormLabel}"/>
                        <TextBox x:Name="ResourceTextBox" Style="{StaticResource FormTextBox}" Text="file:C:/test/*" Margin="0,0,0,12"/>
                        
                        <TextBlock Text="Action" Style="{StaticResource FormLabel}"/>
                        <ComboBox x:Name="ActionComboBox" Style="{StaticResource FormComboBox}" Margin="0,0,0,12">
                            <ComboBoxItem Content="read" IsSelected="True"/>
                            <ComboBoxItem Content="write"/>
                            <ComboBoxItem Content="execute"/>
                            <ComboBoxItem Content="connect"/>
                            <ComboBoxItem Content="admin"/>
                        </ComboBox>
                        
                        <TextBlock Text="Expires In (seconds)" Style="{StaticResource FormLabel}"/>
                        <TextBox x:Name="ExpiresInTextBox" Style="{StaticResource FormTextBox}" Text="3600" Margin="0,0,0,16"/>
                        
                        <Button Content="Request Token" Style="{StaticResource ActionButton}" Click="RequestTokenConfirm_Click"/>
                        
                        <Border BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Margin="0,20,0,0" Padding="0,20,0,0">
                            <StackPanel x:Name="ValidateTokenPanel" Visibility="Collapsed">
                                <TextBlock Text="Validate Token" Style="{StaticResource SectionHeader}"/>
                                <TextBlock Text="Token String" Style="{StaticResource FormLabel}"/>
                                <TextBox x:Name="ValidateTokenTextBox" Style="{StaticResource FormTextBox}" Margin="0,0,0,12" Height="60" TextWrapping="Wrap"/>
                                <Button Content="Validate" Style="{StaticResource ActionButton}" Click="ValidateTokenConfirm_Click"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#1E1E2E" Padding="15">
            <TextBlock x:Name="StatusTextBlock" Text="Ready" Foreground="#B0BEC5" FontSize="12"/>
        </Border>
    </Grid>
</Window>