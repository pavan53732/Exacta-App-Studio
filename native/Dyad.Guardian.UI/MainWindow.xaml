<Window x:Class="Dyad.Guardian.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dyad Guardian Security Dashboard" 
        Height="700" Width="1000"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>
        
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="1" BlurRadius="4" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="MetricValue" TargetType="TextBlock">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2196F3"/>
        </Style>
        
        <Style x:Key="MetricLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="Margin" Value="0,4,0,0"/>
        </Style>
    </Window.Resources>
    
    <Grid Background="#F5F5F5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Sidebar -->
        <Border Grid.Column="0" Background="#1E1E2E" Padding="0">
            <StackPanel>
                <!-- Logo -->
                <Border Background="#2196F3" Padding="20">
                    <StackPanel>
                        <TextBlock Text="DYAD GUARDIAN" 
                                   Foreground="White" 
                                   FontSize="16" 
                                   FontWeight="Bold"/>
                        <TextBlock Text="Security Monitor" 
                                   Foreground="#B0BEC5" 
                                   FontSize="12"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Navigation -->
                <StackPanel Margin="0,20,0,0">
                    <Button x:Name="NavDashboard" 
                            Content="ðŸ“Š Dashboard" 
                            Style="{StaticResource NavButton}"
                            Click="NavDashboard_Click"/>
                    <Button x:Name="NavJobs" 
                            Content="âš¡ Job Objects" 
                            Style="{StaticResource NavButton}"
                            Click="NavJobs_Click"/>
                    <Button x:Name="NavTokens" 
                            Content="ðŸ”‘ Capability Tokens" 
                            Style="{StaticResource NavButton}"
                            Click="NavTokens_Click"/>
                    <Button x:Name="NavFirewall" 
                            Content="ðŸ”¥ Firewall Rules" 
                            Style="{StaticResource NavButton}"
                            Click="NavFirewall_Click"/>
                    <Button x:Name="NavEvents" 
                            Content="ðŸ“‹ Security Events" 
                            Style="{StaticResource NavButton}"
                            Click="NavEvents_Click"/>
                </StackPanel>
                
                <!-- Status -->
                <Border Background="#2D2D44" Margin="20" CornerRadius="8" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Service Status" 
                                   Foreground="#B0BEC5" 
                                   FontSize="11"
                                   Margin="0,0,0,8"/>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Ellipse x:Name="StatusIndicator" 
                                     Width="10" Height="10" 
                                     Fill="#4CAF50" 
                                     Margin="0,0,8,0"/>
                            <TextBlock x:Name="StatusText" 
                                       Text="Connected" 
                                       Foreground="White"
                                       FontSize="13"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
        
        <!-- Main Content -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Padding="30">
            <StackPanel x:Name="MainContent">
                <!-- Header -->
                <TextBlock Text="Security Dashboard" Style="{StaticResource HeaderText}"/>
                
                <!-- Metrics Cards -->
                <UniformGrid Columns="4" Margin="0,0,0,30">
                    <Border Style="{StaticResource CardStyle}" Margin="0,0,15,0">
                        <StackPanel>
                            <TextBlock x:Name="ActiveJobsCount" Text="0" Style="{StaticResource MetricValue}"/>
                            <TextBlock Text="Active Job Objects" Style="{StaticResource MetricLabel}"/>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource CardStyle}" Margin="0,0,15,0">
                        <StackPanel>
                            <TextBlock x:Name="ActiveTokensCount" Text="0" Style="{StaticResource MetricValue}"/>
                            <TextBlock Text="Active Tokens" Style="{StaticResource MetricLabel}"/>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource CardStyle}" Margin="0,0,15,0">
                        <StackPanel>
                            <TextBlock x:Name="FirewallRulesCount" Text="0" Style="{StaticResource MetricValue}"/>
                            <TextBlock Text="Firewall Rules" Style="{StaticResource MetricLabel}"/>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock x:Name="BlockedAttemptsCount" Text="0" Style="{StaticResource MetricValue}"/>
                            <TextBlock Text="Blocked Attempts" Style="{StaticResource MetricLabel}"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>
                
                <!-- Recent Activity -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Recent Security Events" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,15"/>
                        <DataGrid x:Name="EventsDataGrid" 
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  GridLinesVisibility="Horizontal"
                                  BorderThickness="0"
                                  HeadersVisibility="Column">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Time" Binding="{Binding Time}" Width="120"/>
                                <DataGridTextColumn Header="Event Type" Binding="{Binding EventType}" Width="150"/>
                                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>