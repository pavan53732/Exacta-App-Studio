<Window x:Class="Dyad.Guardian.UI.FirewallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Firewall Rules - Windows Filtering Platform" Height="650" Width="1000"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="White" Padding="20" Margin="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Windows Filtering Platform Rules" Style="{StaticResource HeaderText}" Margin="0"/>
                    <TextBlock Text="Manage network isolation and firewall rules" Foreground="#666" FontSize="12" Margin="0,4,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="+ Add Rule" Style="{StaticResource ActionButton}" Click="AddRule_Click" Margin="0,0,8,0"/>
                    <Button Content="Process Isolation" Style="{StaticResource ActionButton}" Click="ProcessIsolation_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Rules List -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,20,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Active Firewall Rules" Style="{StaticResource SectionHeader}" Margin="0"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Content="Refresh" Style="{StaticResource ActionButton}" Padding="12,6" FontSize="12" Click="RefreshRules_Click"/>
                        </StackPanel>
                    </Grid>
                    
                    <DataGrid Grid.Row="1" x:Name="RulesDataGrid" 
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              GridLinesVisibility="Horizontal"
                              BorderThickness="0"
                              HeadersVisibility="Column">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Rule ID" Binding="{Binding RuleId, StringFormat={}{0:8}}" Width="90"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>
                            <DataGridTextColumn Header="Direction" Binding="{Binding Direction}" Width="80">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Direction}" Value="inbound">
                                                <Setter Property="Foreground" Value="#E74C3C"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Direction}" Value="outbound">
                                                <Setter Property="Foreground" Value="#3498DB"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Protocol" Binding="{Binding Protocol}" Width="70"/>
                            <DataGridTextColumn Header="Local Port" Binding="{Binding LocalPort}" Width="80"/>
                            <DataGridTextColumn Header="Remote" Binding="{Binding RemoteAddress}" Width="100"/>
                            <DataGridTextColumn Header="Action" Binding="{Binding Action}" Width="70">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Action}" Value="block">
                                                <Setter Property="Foreground" Value="#E74C3C"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Action}" Value="allow">
                                                <Setter Property="Foreground" Value="#27AE60"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridCheckBoxColumn Header="Enabled" Binding="{Binding Enabled}" Width="70"/>
                            <DataGridTemplateColumn Header="Actions" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="Edit" Style="{StaticResource ActionButton}" Margin="0,0,8,0" Padding="8,4" FontSize="11" Click="EditRule_Click"/>
                                            <Button Content="Delete" Style="{StaticResource DangerButton}" Padding="8,4" FontSize="11" Click="DeleteRule_Click"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
            
            <!-- Create Rule Form -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="RuleFormPanel">
                        <TextBlock Text="Create Firewall Rule" Style="{StaticResource SectionHeader}"/>
                        
                        <TextBlock Text="Rule Name" Style="{StaticResource FormLabel}"/>
                        <TextBox x:Name="RuleNameTextBox" Style="{StaticResource FormTextBox}" Text="Block-Outbound-HTTP" Margin="0,0,0,12"/>
                        
                        <TextBlock Text="Direction" Style="{StaticResource FormLabel}"/>
                        <ComboBox x:Name="DirectionComboBox" Style="{StaticResource FormComboBox}" Margin="0,0,0,12">
                            <ComboBoxItem Content="outbound" IsSelected="True"/>
                            <ComboBoxItem Content="inbound"/>
                        </ComboBox>
                        
                        <TextBlock Text="Protocol" Style="{StaticResource FormLabel}"/>
                        <ComboBox x:Name="ProtocolComboBox" Style="{StaticResource FormComboBox}" Margin="0,0,0,12">
                            <ComboBoxItem Content="tcp" IsSelected="True"/>
                            <ComboBoxItem Content="udp"/>
                            <ComboBoxItem Content="icmp"/>
                            <ComboBoxItem Content="any"/>
                        </ComboBox>
                        
                        <TextBlock Text="Local Port (optional)" Style="{StaticResource FormLabel}"/>
                        <TextBox x:Name="LocalPortTextBox" Style="{StaticResource FormTextBox}" Text="" Margin="0,0,0,12"/>
                        
                        <TextBlock Text="Remote Port (optional)" Style="{StaticResource FormLabel}"/>
                        <TextBox x:Name="RemotePortTextBox" Style="{StaticResource FormTextBox}" Text="80" Margin="0,0,0,12"/>
                        
                        <TextBlock Text="Remote Address (optional)" Style="{StaticResource FormLabel}"/>
                        <TextBox x:Name="RemoteAddressTextBox" Style="{StaticResource FormTextBox}" Text="*" Margin="0,0,0,12"/>
                        
                        <TextBlock Text="Action" Style="{StaticResource FormLabel}"/>
                        <ComboBox x:Name="ActionComboBox" Style="{StaticResource FormComboBox}" Margin="0,0,0,16">
                            <ComboBoxItem Content="block" IsSelected="True"/>
                            <ComboBoxItem Content="allow"/>
                        </ComboBox>
                        
                        <Button Content="Create Rule" Style="{StaticResource ActionButton}" Click="CreateRuleConfirm_Click"/>
                        
                        <!-- Process Isolation Panel (initially collapsed) -->
                        <Border BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Margin="0,20,0,0" Padding="0,20,0,0">
                            <StackPanel x:Name="ProcessIsolationPanel" Visibility="Collapsed">
                                <TextBlock Text="Process Isolation" Style="{StaticResource SectionHeader}"/>
                                <TextBlock Text="Process ID" Style="{StaticResource FormLabel}"/>
                                <TextBox x:Name="IsolationProcessIdTextBox" Style="{StaticResource FormTextBox}" Margin="0,0,0,12"/>
                                <TextBlock Text="Allowed Hosts (comma-separated)" Style="{StaticResource FormLabel}"/>
                                <TextBox x:Name="AllowedHostsTextBox" Style="{StaticResource FormTextBox}" Margin="0,0,0,12" Text="localhost,127.0.0.1"/>
                                <Button Content="Create Isolation Rule" Style="{StaticResource ActionButton}" Click="CreateIsolationConfirm_Click"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#1E1E2E" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="StatusTextBlock" Text="Ready" Foreground="#B0BEC5" FontSize="12"/>
                <TextBlock Grid.Column="1" x:Name="EngineStatusTextBlock" Text="WFP Engine: Initialized" Foreground="#27AE60" FontSize="12"/>
            </Grid>
        </Border>
    </Grid>
</Window>
