<Window x:Class="Dyad.Guardian.UI.JobObjectsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Job Objects Management" Height="600" Width="900"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="White" Padding="20" Margin="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Job Objects Management" Style="{StaticResource HeaderText}" Margin="0"/>
                <Button Grid.Column="1" Content="+ Create Job" Style="{StaticResource ActionButton}" Click="CreateJob_Click"/>
            </Grid>
        </Border>
        
        <!-- Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Jobs List -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,20,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Active Job Objects" Style="{StaticResource SectionHeader}"/>
                    
                    <DataGrid Grid.Row="1" x:Name="JobsDataGrid" 
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              GridLinesVisibility="Horizontal"
                              BorderThickness="0"
                              HeadersVisibility="Column"
                              SelectionChanged="JobsDataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Job Name" Binding="{Binding Name}" Width="150"/>
                            <DataGridTextColumn Header="Created" Binding="{Binding CreatedAt, StringFormat={}{0:MM/dd/yyyy HH:mm}}" Width="120"/>
                            <DataGridTextColumn Header="Memory Limit" Binding="{Binding MemoryLimit, StringFormat={}{0:N0} bytes}" Width="120"/>
                            <DataGridTextColumn Header="CPU Rate" Binding="{Binding CpuRate, StringFormat={}{0}%}" Width="80"/>
                            <DataGridTextColumn Header="Processes" Binding="{Binding ActiveProcesses}" Width="80"/>
                            <DataGridTemplateColumn Header="Actions" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="View" Style="{StaticResource ActionButton}" Margin="0,0,8,0" Padding="8,4" FontSize="11" Click="ViewJob_Click"/>
                                            <Button Content="Terminate" Style="{StaticResource DangerButton}" Padding="8,4" FontSize="11" Click="TerminateJob_Click"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
            
            <!-- Job Details / Create Form -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="JobDetailsPanel">
                        <TextBlock Text="Create New Job Object" Style="{StaticResource SectionHeader}"/>
                        
                        <TextBlock Text="Job Name" Style="{StaticResource FormLabel}"/>
                        <TextBox x:Name="JobNameTextBox" Style="{StaticResource FormTextBox}" Margin="0,0,0,12"/>
                        
                        <TextBlock Text="Memory Limit (bytes)" Style="{StaticResource FormLabel}"/>
                        <TextBox x:Name="MemoryLimitTextBox" Style="{StaticResource FormTextBox}" Text="268435456" Margin="0,0,0,12"/>
                        
                        <TextBlock Text="CPU Rate (1-100%)" Style="{StaticResource FormLabel}"/>
                        <TextBox x:Name="CpuRateTextBox" Style="{StaticResource FormTextBox}" Text="50" Margin="0,0,0,12"/>
                        
                        <TextBlock Text="Max Processes" Style="{StaticResource FormLabel}"/>
                        <TextBox x:Name="MaxProcessesTextBox" Style="{StaticResource FormTextBox}" Text="10" Margin="0,0,0,12"/>
                        
                        <CheckBox x:Name="KillOnCloseCheckBox" Content="Kill processes on job close" IsChecked="True" Margin="0,0,0,16"/>
                        
                        <Button Content="Create Job Object" Style="{StaticResource ActionButton}" Click="CreateJobConfirm_Click"/>
                        
                        <Border BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Margin="0,20,0,0" Padding="0,20,0,0">
                            <StackPanel x:Name="AssignProcessPanel" Visibility="Collapsed">
                                <TextBlock Text="Assign Process" Style="{StaticResource SectionHeader}"/>
                                <TextBlock Text="Process ID" Style="{StaticResource FormLabel}"/>
                                <TextBox x:Name="ProcessIdTextBox" Style="{StaticResource FormTextBox}" Margin="0,0,0,12"/>
                                <Button Content="Assign to Job" Style="{StaticResource ActionButton}" Click="AssignProcess_Click"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#1E1E2E" Padding="15">
            <TextBlock x:Name="StatusTextBlock" Text="Ready" Foreground="#B0BEC5" FontSize="12"/>
        </Border>
    </Grid>
</Window>