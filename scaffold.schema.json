{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the scaffold (e.g., 'rust-hello')"
    },
    "name": {
      "type": "string",
      "description": "Human-readable name of the scaffold"
    },
    "description": {
      "type": "string",
      "description": "Brief description of the scaffold's stack and purpose"
    },
    "icon": {
      "type": "string",
      "description": "URL to an icon for the scaffold"
    },
    "commands": {
      "type": "object",
      "properties": {
        "start": {
          "type": "string",
          "description": "Command to start the development server or run the app"
        },
        "build": {
          "type": "string",
          "description": "Command to build the application for production"
        },
        "test": {
          "type": "string",
          "description": "Command to run tests"
        }
      },
      "required": ["start"]
    },
    "requiredTools": {
      "type": "array",
      "items": { "type": "string" },
      "description": "List of system tools required (e.g., ['cargo', 'rustc'])"
    }
  },
  "required": ["id", "name", "description", "commands"]
}
